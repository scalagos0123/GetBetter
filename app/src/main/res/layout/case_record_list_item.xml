<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_status_drawable">

    <android.support.v7.widget.CardView
        android:id="@+id/case_record_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/case_record_control_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_number_placeholder"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/case_record_chief_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chief_complaint_placeholder"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_toRightOf="@id/case_record_control_number" />

            <TextView
                android:id="@+id/case_record_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_placeholder"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/case_record_chief_complaint"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"/>

            <TextView
                android:id="@+id/case_record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_placeholder"
                android:textSize="16sp"
                android:layout_toRightOf="@id/case_record_status"
                android:layout_marginLeft="100dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>