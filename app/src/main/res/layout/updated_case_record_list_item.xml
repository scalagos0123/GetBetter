<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_status_drawable">

    <android.support.v7.widget.CardView
        android:id="@+id/updated_case_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/updated_case_patient_item_profile_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_picture_placeholder"
                android:contentDescription="@string/patient_profile_image"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/updated_case_patient_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_name_placeholder"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/updated_case_patient_item_profile_image"
                android:layout_toEndOf="@+id/updated_case_patient_item_profile_image" />

            <TextView
                android:id="@+id/updated_case_complaint_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chief_complaint_placeholder"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_toRightOf="@+id/updated_case_patient_item_name"
                android:layout_toEndOf="@+id/updated_case_patient_item_name" />

            <TextView
                android:id="@+id/updated_case_updated_on_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_placeholder"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/updated_case_complaint_item"
                android:layout_toEndOf="@id/updated_case_complaint_item"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>